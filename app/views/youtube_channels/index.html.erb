<p id="notice"><%= notice %></p>

<h1>Youtube Channels</h1>

<table>
  <tbody>
    <% @youtube_channels.each_slice(4) do |youtube_channel| %>
      <tr>
          <% youtube_channel.each do |row| %>
          <td>
              <%= link_to row.channel_URL, target: :_blank do %>
                <%= image_tag(row.image, :size => "285x400", class: "css-style")%>
              <% end %>
              
              <h3 style="text-align: center;"><%= row.title %></h3>
              <p style="text-align: center;">
              <%= link_to 'Show', row,class: "btn btn-custom"  %>
              
              </p>
          </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Youtube Channel', new_youtube_channel_path %>


 